<h1>All Posts</h1>
<hr />

<!-- loop all of the posts and outpust some info about them
 -->
 <ul>
	 <% @posts.each do |post| %>
	 	<li>
	 	 <%= post.title %> - 
	 	 <%= link_to 'Show', post_path(post) %> - 
	 	 <%= link_to 'Edit', edit_post_path(post) %> - 
	 	 <%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: 'Are you sure man?'} %>
	  </li>
	 <% end %>
 </ul>

